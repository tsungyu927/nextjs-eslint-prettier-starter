{
  "root": true,
  "extends": [
    "next/core-web-vitals",
    "plugin:@typescript-eslint/recommended",
    "airbnb",
    "prettier"
  ],
  "plugins": ["import", "@typescript-eslint", "unused-imports"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    // Setting for eslint-plugin-react (imported from next/core-web-vitals)
    // (there are no longer necessary and can be turned off or removed from React 17+)
    "react/jsx-uses-react": "off",
    "react/react-in-jsx-scope": "off",
    // Setting for eslint-plugin-unused-imports
    "no-unused-vars": "off",
    "unused-imports/no-unused-imports": "error",
    "unused-imports/no-unused-vars": [
      "error",
      {
        "vars": "all",
        "varsIgnorePattern": "^_",
        "args": "after-used",
        "argsIgnorePattern": "^_"
      }
    ],
    // Setting for eslint-import-resolver-typescript
    "import/no-unresolved": "error",
    // Setting to match Airbnbâ€™s coding style
    "jsx-quotes": ["error", "prefer-double"],
    "curly": ["error", "multi-line"],
    "comma-spacing": ["error", { "before": false, "after": true }],
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "jsx": "never",
        "mjs": "never"
      }
    ],
    "react/jsx-filename-extension": [
      "warn",
      {
        "extensions": [".tsx", ".jsx", ".js", ".ts"]
      }
    ]
  },
  "settings": {
    "import/parsers": {
      "@typescript-eslint/parser": [".ts", ".tsx"]
    },
    "import/resolver": {
      "typescript": {
        "alwaysTryTypes": true
      }
    }
  }
}
